{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript
    "module": "CommonJS", // Use CommonJS modules (default for Node.js)
    "outDir": "./dist", // Output compiled files to the 'dist' directory
    "rootDir": "./src", // Source files will be in 'src' folder
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow using default imports from CommonJS modules
    "skipLibCheck": true, // Skip checking library files for faster compilation
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the 'src' folder
  "exclude": ["node_modules"] // Exclude 'node_modules' directory
}
